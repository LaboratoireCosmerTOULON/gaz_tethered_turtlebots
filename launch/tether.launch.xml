<launch>
  <!-- launcher arguments -->
  <arg name="object_name"/>
  <arg name="init_pose"/>

  <!-- SDF source file -->
  <arg name="sdf_file" default="$(find tether_description)/models/tether.sdf" />
  <arg name="tether_description" value="$(arg sdf_file)" />
  
  <!-- Gazebo model spawner -->
  <node name="spawn_turtlebot_model" pkg="gazebo_ros" type="spawn_model"
        args=" -unpause -sdf -database tether_description -model $(arg object_name)"/>
  
</launch>

